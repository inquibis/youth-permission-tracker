# new-web-dockerfile
FROM nginx:alpine

# Remove default nginx site
RUN rm /etc/nginx/conf.d/default.conf

# Custom nginx config
COPY new_site/nginx.conf /etc/nginx/conf.d/youth.conf

# Copy static website files
COPY new_site /usr/share/nginx/html

# Expose HTTP port
EXPOSE 80

# Run nginx
CMD ["nginx", "-g", "daemon off;"]

# docker build -f new-web-dockerfile -t youth-web .
# docker run --rm -p 80:80 youth-web
