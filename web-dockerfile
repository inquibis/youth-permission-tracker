# Use the official nginx image
FROM nginx:alpine

ENV BASE_URL=http://127.0.0.1:8000


COPY website/ /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80


CMD ["nginx", "-g", "daemon off;"]

